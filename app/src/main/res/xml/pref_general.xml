<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <EditTextPreference
        android:defaultValue="13"
        android:inputType="number"
        android:key="trans"
        android:maxLines="1"
        android:persistent="true"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Display transmission delay, ms" />

    <EditTextPreference
        android:defaultValue="5"
        android:inputType="number"
        android:key="multi"
        android:maxLines="1"
        android:persistent="true"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Multiplier for IC/Kernel upper limit" />

    <EditTextPreference
        android:defaultValue="1000"
        android:inputType="number"
        android:key="samples"
        android:maxLines="1"
        android:persistent="true"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Samples for test" />

</PreferenceScreen>